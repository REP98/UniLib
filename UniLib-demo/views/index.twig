<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Heladeria</title>
    <link rel="icon" type="image/png" href="/helado.png" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Pacifico&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
    body {
        background-image: url('https://images.unsplash.com/photo-1501443762994-82bd5dace89a?q=80&w=1470&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D');
        background-repeat: no-repeat;
        background-color: #6f6943;
        background-position: center;
        background-size: cover;
        min-height: 97vh;
        font-family: "Pacifico", cursive;
        font-weight: 400;
        font-style: normal;
    }
    </style>
    <script src="https://code.jquery.com/jquery-3.7.1.slim.min.js">
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>
    <script>
    $(document).ready(function() {
        $('.comprar-btn').on('click', function() {
            var heladoId = $(this).data('id');

            // Aquí puedes hacer una llamada AJAX para obtener más detalles del helado si es necesario
            var helados = {
                'Mango': 'https://t2.uc.ltmcdn.com/es/posts/8/2/4/como_hacer_helado_de_mango_51428_orig.jpg',
                'Piña Colada': 'https://d2j6dbq0eux0bg.cloudfront.net/images/62699774/2398268139.jpg',
                'Coco': 'https://media.mykaramelli.com/galeria/recetas/receta-de-helado-de-coco-fcil-y-deliciosa_90_1.jpg',
                'Maracuyá': 'https://mui.today/__export/1610551231862/sites/mui/img/2021/01/13/93eeda47-84cnzp0itw1q-3raala5fla6qek262usmyq-sorvete-de-maracuja-landscapethumbnail-pt.jpeg_916738657.jpeg',
                'Limón': 'https://www.solopostres.com/wp-content/uploads/2017/06/Helado-de-limon-01-1.jpg'
            };

            var helado = helados[heladoId];
            $('#heladoModalLabel').text(heladoId);
            $('#heladoImagen').attr('src', helado);
        });
    });
    </script>
</head>
<body>
    <div class="align-items-center d-flex justify-content-center vh-100">
        <div class="bg-body-tertiary card m-auto px-4 py-2 shadow">
            <div class="card-header bg-transparent">
                <h1 class="card-title text-center w-100">Menú de Helados</h1>
            </div>
            <div class="card-body">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Sabor</th>
                            <th>Precio</th>
                            <th>Disponibilidad</th>
                            <th>Acción</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for ic in icecream %}
                            <tr data-id="{{ ic.id }}">
                                <td>{{ ic.flavor }}</td>
                                <td>{{ ic.price | number_format(2) }}</td>
                                <td>{{ ic.availability ? 'Disponible' : 'No disponible' }}</td>
                                <td>
                                   <button type="button" class="btn btn-primary btn-sm comprar-btn" data-bs-toggle="modal" data-bs-target="#heladoModal" data-id="{{ ic.flavor }}">Ver</button>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <!-- Modal -->
    <div class="modal fade" id="heladoModal" tabindex="-1" role="dialog" aria-labelledby="heladoModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="heladoModalLabel">Información del Helado</h5>
                    <button type="button" class="btn close ms-auto" data-bs-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <img id="heladoImagen" src="" alt="Imagen del Helado" class="img-fluid mb-3">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-success" data-bs-dismiss="modal">Cerrar</button>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
